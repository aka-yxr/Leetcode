/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     struct ListNode *next;
 * };
 */
struct ListNode* reverseList(struct ListNode* head){
    if(head==NULL||head->next==NULL)//åˆ¤æ–­é“¾è¡¨ä¸ºç©ºæˆ–è€…åªæœ‰ä¸€ä¸ªæˆå‘˜ã€‚
    {
        return head;
    }
    struct ListNode* newhead=NULL,*starnext=NULL,*star=head;
// 1->2->3->4->5->NULL
//å®šä¹‰newheadæ˜¯æ–°çš„å¤´éƒ¨ã€‚
//newhead   star,starnextæŒ‡å‘çš„æ˜¯2
//    NULL <-1       2->3->4->5->NULL
//

// ç°åœ¨1å°±æ˜¯newhead    star,starnextæŒ‡å‘çš„æ˜¯3
//         NULL <-1  <- 2       3->4->5->NULL

// ç°åœ¨2å°±æ˜¯newhead   star,starnextæŒ‡å‘çš„æ˜¯4
//   NULL <-1  <- 2   <-3       4->5->NULL

//    ç°åœ¨3å°±æ˜¯newhead   star,starnextæŒ‡å‘çš„æ˜¯5
//   NULL <-1 <- 2 <-3  <- 4     5->NULL

//        ç°åœ¨4å°±æ˜¯newhead      star,starnextæŒ‡å‘çš„æ˜¯NULL
//   NULL <-1 <- 2 <-3   <- 4   <-5     NULL
//ä¸‹ä¸€æ­¥è¿­ä»£å°±ç»“æŸäº†ã€‚

    while(star)
    {
        starnext=star->next;
        //å¤´æ’
        star->next=newhead;
        newhead=star;
        star=starnext;
    }
    return newhead;
}
--------------------------------------------------------------

/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     struct ListNode *next;
 * };
 */


struct ListNode* reverseList(struct ListNode* head){
    if(head==NULL||head->next==NULL)
    {
        return head;
    }
    struct ListNode* n1=NULL,*n2=head,*n3=head->next;
    //å•é“¾è¡¨åŒ…æ‹¬ä¸¤éƒ¨åˆ†ï¼Œä¸€ä¸ªæ•°å­—ï¼Œä¸€ä¸ªæŒ‡é’ˆï¼ŒæŒ‡é’ˆæŒ‡å‘çš„å°±æ˜¯ä¸‹ä¸€ä¸ªç»“ç‚¹ã€‚
    while(n2)
    {
        //åè½¬ï¼ŒæŠŠæ¯ä¸ªç»“ç‚¹æŒ‡é’ˆçš„æŒ‡å‘åè½¬ä¸€ä¸‹å°±ğŸ†—ã€‚
        n2->next=n1;   //æŠŠæŒ‡é’ˆçš„æŒ‡å‘ä»æŒ‡å‘åé¢å˜ä¸ºæŒ‡å‘å‰é¢ã€‚
        //è¿­ä»£
        n1=n2;  //è¿™æ—¶å€™æŠŠn1å‘åç§»åŠ¨1ä½
        n2=n3;  //n2å‘ä¸‹ç§»åŠ¨ä¸€ä½
        if(n3)  //n3å°±æ˜¯è®°å¾—åŸæ¥æŒ‡å‘çš„æŒ‡é’ˆï¼Œä¹Ÿéœ€è¦å‘ä¸‹ç§»åŠ¨ä¸€ä½ã€‚
        {
            n3=n3->next;
        }
    }
    return n1;

}
