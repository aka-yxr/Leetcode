int removeElement(int* nums, int numsSize, int val)
{
    int ret=0,i=0;
    //ret指向“新数组”，i指向“老数组”
    for(i=0;i<numsSize;i++)
    {
        if(nums[i]!=val)//把不需要移除的数字放在“新数组里”
        {
            nums[ret]=nums[i];
            ret++;
        }
    }
    return ret;

}
